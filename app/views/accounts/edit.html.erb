<% title 'Account' %>
<% heading "Your Account Details" %>

<div class="row">
  <div class="col-md-6">
    <h3><i class="fa fa-exclamation-circle"></i> Your Details</h3>
    <%= bootstrap_form_for(current_user, url: account_path, label_errors: true) do |f| %>
      <%= f.text_field :name %>
      <%= f.text_field :email %>
      <% if current_user.admin? %>
        <%= f.fields_for :organization do |f_org| %>
          <%= f_org.text_field :name, label: "Organization Name" %>
        <% end %>
      <% end %>
      <%= f.submit "Save", class: "btn btn-primary active" %>
    <% end %>
  </div>
  <div class="col-md-6">
    <h3><i class="fa fa-exclamation-circle"></i> Some other Details</h3>

  </div>
</div>
