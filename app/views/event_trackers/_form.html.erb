<%= bootstrap_form_for(@event_tracker, label_errors: true) do |f| %>

  <%= f.text_field :name %>

  <%= f.label :interval_cd, "Event Frequency" %><br/>
  <% EventTracker.intervals.each do |interval| %>
    <%= f.radio_button(:interval_cd, interval.id, label: interval.display, inline: true ) %>
  <% end %><br/><br/>

  <%= f.collection_check_boxes :contact_user_ids, current_user.organization.users, :id, :name, label: "Contacts" %>

  <%= f.text_area :notes %>

  <%= f.submit "Save", class: "btn btn-primary active" %>

<% end %>
