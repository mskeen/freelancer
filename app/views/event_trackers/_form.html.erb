<%= form_for(@event_tracker) do |f| %>
  <% if @event_tracker.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event_tracker.errors.count, "error") %> prohibited this event_tracker from being saved:</h2>

      <ul>
      <% @event_tracker.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :notes %>
    <%= f.text_area :notes, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :interval_cd, "Event Frequency" %><br/>
    <% EventTracker.intervals.each do |interval| %>
      <%= f.radio_button(:interval_cd, interval.id ) %>
      <%= f.label :interval_cd, interval.display, value: interval.id %>&nbsp;
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit "Save" %>
  </div>
<% end %>
