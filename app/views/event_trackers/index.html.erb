<% title 'Event Tracking' %>
<% heading 'Event Tracking' %>

<table class="table table-condensed table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Interval</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @event_trackers.each do |event_tracker| %>
      <tr class="event-tracker-row">
        <td><%= event_tracker.name %></td>
        <td><%= event_tracker.interval_cd %></td>
        <td><%= 'status' %></td>
        <td>
          <%= link_to 'Edit', edit_event_tracker_path(event_tracker) %>
          <%= link_to 'Destroy', event_tracker, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event Tracker', new_event_tracker_path, class: "btn btn-primary active " %>
